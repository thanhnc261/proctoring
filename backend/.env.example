# AI Proctoring System - Environment Configuration
# Copy this file to .env and adjust values as needed

# Application
DEBUG=False

# Server
HOST=0.0.0.0
PORT=8000

# Database (for future use)
DATABASE_URL=sqlite:///./proctoring.db

# Detection Thresholds - Gaze
# Horizontal head rotation threshold (degrees)
YAW_THRESHOLD=45.0
# Vertical head rotation threshold (degrees)
PITCH_THRESHOLD=30.0
# Minimum duration for sustained deviation (seconds)
GAZE_DEVIATION_DURATION=3.0

# Detection Thresholds - Objects
# General object detection confidence
YOLO_CONFIDENCE=0.5
# Person detection confidence
PERSON_CONFIDENCE=0.4

# Performance
MAX_CONCURRENT_SESSIONS=50
FRAME_PROCESSING_TIMEOUT=0.2

# Models
YOLO_MODEL_PATH=models/yolov8n.pt
